@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "_Layout.cshtml";
}
<div class="banner">
    <div class="row">
        <div class="large-5 columns">
            <h1><span>@Umbraco.Field("BannerHeading")</span></h1>
            <h3 class="sub-header"><span>@Umbraco.Field("BannerSubheading")</span></h3>
        </div>
    </div>
</div>

<div class="banner-follow">
    <div class="row">
        <div class="large-12 columns">
            @Umbraco.Field("BannerSummaryLine")
        </div>
    </div>
</div>

<div class="row">
    <div class="large-12 columns">
        <div class="row">
            <div class="large-8 small-12 columns">
                <h3>Virginia Tech Competitive Cheerleading</h3>

                @Umbraco.Field("OrganizationSummary")
            </div>

            <div class="large-4 columns show-for-medium-up">
                <div class="panel-box">
                    <h4>CONNECT</h4>
                    <h6>@Umbraco.Field("SocialHeading")</h6>
                    <br />

                    <ul class="small-block-grid-3 text-center">
                        @if (CurrentPage.HasValue("FacebookURL"))
                        {
                            <li>
                                <a href="@Umbraco.Field("FacebookURL")">
                                    <i class="fa fa-facebook fa-2x"></i>
                                </a>
                            </li>
                        }

                        @if (CurrentPage.HasValue("TwitterURL"))
                        {
                            <li>
                                <a href="@Umbraco.Field("TwitterURL")">
                                    <i class="fa fa-twitter fa-2x"></i>
                                </a>
                            </li>
                        }

                        @if (CurrentPage.HasValue("InstagramURL"))
                        {
                            <li>
                                <a href="@Umbraco.Field("InstagramURL")">
                                    <i class="fa fa-instagram fa-2x"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="large-4 columns show-for-medium-up">
        <div class="panel-box">
            <h4>OFFICERS</h4>

            @{
                var officerNodeReference = Umbraco.TypedSearch("Officers").SingleOrDefault();

                if (officerNodeReference != null)
                {
                    var officerNode = Umbraco.Content(officerNodeReference.Id);

                    <ul>
                        @foreach (var item in officerNode.Children.Where("Visible"))
                        {
                            <li>
                                <strong>@item.Position </strong>

                                <a href="mailto:@item.PersonEmailAddress?subject=Virginia Tech Competitive Cheerleading | Contact Us">
                                    @item.PersonName
                                </a>
                            </li>
                        }
                    </ul>
                }
            }

            <br />
            <h4>COACHES</h4>

            @{
                var coachNodeReference = Umbraco.TypedSearch("Coaches").SingleOrDefault();

                if (coachNodeReference != null)
                {
                    var coachNode = Umbraco.Content(coachNodeReference.Id);

                    <ul>
                        @foreach (var item in coachNode.Children.Where("Visible"))
                        {
                            <li>
                                @item.PersonName
                            </li>
                        }
                    </ul>
                }
            }
        </div>
    </div>

    <div class="large-8 small-12 columns">
        <h3>Our Gym</h3>

        @Umbraco.Field("locationInformation")

        <h5 id="directions">Directions to Virginia Techniques from Virginia Tech</h5>

        <ul>
            <li>US-460 E towards I-81</li>
            <li>Take exit 2 for US-11/US-460 Bus towards Christiansburg</li>
            <li>Turn right onto Roanoke St</li>
            <li>Take the first right into the shopping center with Food Lion</li>
            <li>In the parking lot, turn right and drive around to the back of the building</li>
            <li>Arrive at 1550 Roanoke St Suite C, Christiansburg, VA 24073</li>
        </ul>
    </div>
</div>
