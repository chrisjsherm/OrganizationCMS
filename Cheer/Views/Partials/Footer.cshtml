@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

<footer>
    <div class="row footer">
        <div class="small-12 medium-4 large-4 columns">
            <img class="left" data-interchange="[@Umbraco.Field("footerPortraitPhotoLarge", recursive: true), (default)], [@Umbraco.Field("footerPortraitPhoto2x", recursive: true), (retina)]"
                 alt="Portrait" height="100" width="100">

            <noscript>
                <img class="left" src="@Umbraco.Field("footerPortraitPhoto2x", recursive: true)" alt="Portrait" height="100" width="100">
            </noscript>

            @Umbraco.Field("footerSummary", recursive: true)
        </div>
        <div class="small-12 medium-4 large-4 columns">
            <ul class="fa-ul">
                <li>
                    <i class="fa-li fa fa-linkedin fa-2x"></i>
                    <span>
                        Connect with me on
                        <a href="@Umbraco.Field("linkedinLink", recursive: true)">LinkedIn</a>
                        to discover common connections
                    </span>
                </li>
                <li>
                    <i class="fa-li fa fa-github fa-2x"></i>
                    <span>
                        View
                        <a href="@Umbraco.Field("githubLink", recursive: true)">Github</a>
                        to browse the source code of my open source projects
                    </span>
                </li>
                <li>
                    <i class="fa-li fa fa-stack-overflow fa-2x"></i>
                    <span>
                        Visit
                        <a href="@Umbraco.Field("stackoverflowLink", recursive: true)">StackOverflow</a>
                        to see my contributions to the programming community
                    </span>
                </li>
            </ul>
        </div>
        <div class="small-12 medium-4 large-4 columns">
            <div class="menu-container">
                <a href="/portfolio"><h5>Portfolio</h5></a>
                <span>Browse some of my work</span>
            </div>
            <div class="menu-container">
                <a href="/about"><h5>About</h5></a>
                <span>Learn more about my expertise</span>
            </div>
            <div class="menu-container">
                <a href="/blog"><h5>Blog</h5></a>
                <span>Technology tutorials and perspectives</span>
            </div>
            <div class="menu-container">
                <a href="/contact"><h5>Contact</h5></a>
                <span>Get in touch with me</span>
            </div>
        </div>
    </div>
    <div class="row copyright">
        <div class="small-12 medium-6 large-6 columns">
            @Umbraco.Field("copyright", recursive: true)<br>
        </div>
        <div class="medium-6 large-6 columns hide-for-small text-right">
            Developed by <a href="http://shermandigital.com/">Chris Sherman</a>
        </div>
        <div class="small-12 columns show-for-small">
            <br>
            Developed by <a href="http://shermandigital.com/">Chris Sherman</a>
        </div>
    </div>
</footer>
